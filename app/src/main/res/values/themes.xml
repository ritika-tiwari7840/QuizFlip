<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.QuizFlip" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="textAppearanceBody1">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MaterialComponents.Caption</item>



        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/third_primary</item>

        <!-- ✅ Required for Material Components like TextInputLayout -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="textInputOutlinedStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MaterialComponents.Subtitle1</item>
    </style>

    <!-- No Action Bar Theme -->
    <style name="Theme.QuizFlip.NoActionBar" parent="Theme.QuizFlip">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Optional overlays -->
    <style name="Theme.QuizFlip.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.QuizFlip.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- ✅ MaterialComponents-compliant Button Styles -->
    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/first_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="rippleColor">@color/first_primary_dark</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/sec_primary</item>
        <item name="android:textColor">@color/sec_primary</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="rippleColor">@color/sec_primary</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="AccentButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/third_primary</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="rippleColor">@color/third_primary_dark</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

</resources>
