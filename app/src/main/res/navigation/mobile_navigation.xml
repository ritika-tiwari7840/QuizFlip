<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.ritika.quizflip.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_nav_gallery"
            app:destination="@id/nav_gallery" />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.ritika.quizflip.ui.collections.CollectionFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_collection">
        <action
            android:id="@+id/action_collection_to_flashcard"
            app:destination="@id/nav_flashcard" />
    </fragment>

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.ritika.quizflip.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow">
        <argument
            android:name="collectionId"
            app:argType="integer" />
        <argument
            android:name="collectionTitle"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/nav_flashcard"
        android:name="com.ritika.quizflip.ui.flashcard.FlashcardFragment"
        android:label="Flashcards"
        tools:layout="@layout/fragment_flashcard">
        <argument
            android:name="collectionId"
            app:argType="integer" />
        <argument
            android:name="collectionTitle"
            app:argType="string" />
        <action
            android:id="@+id/action_flashcard_to_slideshow"
            app:destination="@id/nav_slideshow" />
    </fragment>

</navigation>