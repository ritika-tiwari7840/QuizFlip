<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.QuizFlip" parent="Theme.MaterialComponents.DayNight.DarkActionBar">


        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="textInputOutlinedStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>

        <item name="textAppearanceCaption">@style/TextAppearance.MaterialComponents.Caption</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/third_primary</item>

        <!-- Required TextAppearance attributes -->
        <item name="textAppearanceHeadline6">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MaterialComponents.Subtitle1</item>
    </style>

    <!-- Theme without ActionBar -->
    <style name="Theme.QuizFlip.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.QuizFlip.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.QuizFlip.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Primary Button -->
    <style name="PrimaryButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/first_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="rippleColor">@color/first_primary_dark</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Secondary Button -->
    <style name="SecondaryButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/sec_primary</item>
        <item name="android:textColor">@color/sec_primary</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="rippleColor">@color/sec_primary</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Accent Button -->
    <style name="AccentButton" parent="Widget.Material3.Button.TonalButton">
        <item name="backgroundTint">@color/third_primary</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="rippleColor">@color/third_primary_dark</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

</resources>
